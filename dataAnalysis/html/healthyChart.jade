<!DOCTYPE html>
html(lang="zh-CN")
  head
    include head.jade
  body
    include header2.jade
    .healthyChart
      .choosee
        span 选择范围:
        ul(class="address clearfix")
          li(class="btn-small focus") 全部
          li(class="btn-small sheng")
            span 省
            ul(class="btn-small")
              .limit
                
          li(class="btn-small shi")
            span 市
            ul(class="btn-small")
              .limit
                li(class="btn-small") 请先选择省
          li(class="btn-small qu")
            span 区/县
            ul(class="btn-small")
              .limit
                li(class="btn-small") 请先选择市
      .choose        
        span 选择时间:
        select.time.btn-big
          option(value="2017~2018学年") 2017~2018学年
          option(value="2017~2018学年") 2017~2018学年
          option(value="2017~2018学年") 2017~2018学年
          option(value="2017~2018学年") 2017~2018学年
          option(value="2017~2018学年") 2017~2018学年
      .healthyBox
        .top
          span.left 健康等级分布
          span.center
            a(href="./healthyList.html") 列表
            span /
            a(href="./healthyChart.html" class="focus") 图表
        .caption
          span 优秀占比:
            span.color_1
          span 良好占比:
            span.color_2
          span 及格占比:
            span.color_3
          span 不及格占比:
            span.color_4
          
        .center
          .row
            span.name 圣菲小学:
            .limit
              span.color_1(style="width:20%") 20%
              span.color_2(style="width:40%") 40%
              span.color_3(style="width:30%") 30%
              span.color_4(style="width:10%") 10%
          .row
            span.name 益州小学:
            .limit
              span.color_1(style="width:20%") 20%
              span.color_2(style="width:33%") 33%
              span.color_3(style="width:40%") 40%
              span.color_4(style="width:7%") 7%
        
        .mydataChoose
          ul.num
            
          select
            option(value="1") 1
            option(value="2") 2
            option(value="3") 3
            option(value="4") 4
            option(value="5") 5
            option(value="6") 6
            option(value="7") 7
          span.left 跳转到
            input
          span.right
            确定   
          
          

